            " ذخیره شد: /content/جز 4 بند ب تبصره 2.txt\n",
            " ذخیره شد: /content/دستورالعمل مسکن بند ث.txt\n",
            " ذخیره شد: /content/سقف کلی و فردی تسهیلات قرض¬الحسنه ودیعه یا ساخت یا خرید مسکن فرزند.txt\n",
            " ذخیره شد: /content/سهمیه مسکن محرومین.txt\n",
            " ذخیره شد: /content/فرزند اوری.txt\n",
            " ذخیره شد: /content/مشاغل خانگی.txt\n"
          ]
        }
      ],
      "source": [
        "from langchain_community.document_loaders import PyPDFLoader\n",
        "import os\n",
        "\n",
        "pdf_files = [\n",
        "    \"/content/ازدواج.pdf\",\n",
        "    \"/content/بند ث تبصره 13.pdf\",\n",
        "    \"/content/جز 4 بند ب تبصره 2.pdf\",\n",
        "    \"/content/دستورالعمل مسکن بند ث.pdf\",\n",
        "    \"/content/سقف کلی و فردی تسهیلات قرض¬الحسنه ودیعه یا ساخت یا خرید مسکن فرزند.pdf\",\n",
        "    \"/content/سهمیه مسکن محرومین.pdf\",\n",
        "    \"/content/فرزند اوری.pdf\",\n",
        "    \"/content/مشاغل خانگی.pdf\"\n",
        "]\n",
        "\n",
        "for pdf_path in pdf_files:\n",
        "    try:\n",
        "        loader = PyPDFLoader(pdf_path)\n",
        "        documents = loader.load()\n",
        "        full_text = \"\\n\".join([doc.page_content for doc in documents])\n",
        "        base_name = os.path.splitext(os.path.basename(pdf_path))[0]\n",
        "        txt_path = f\"/content/{base_name}.txt\"\n",
        "        with open(txt_path, \"w\", encoding=\"utf-8\") as f:\n",
        "            f.write(full_text)\n",
        "        print(f\" ذخیره شد: {txt_path}\")\n",
        "    except Exception as e:\n",
        "        print(f\" خطا در پردازش {pdf_path}: {e}\")\n"
      ]
    },
